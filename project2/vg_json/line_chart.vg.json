{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Multi-series line chart with labels and interactive highlight on hover.  We also set the selection's initial value to provide a better screenshot",
    "data": {"url": "https://raw.githubusercontent.com/ongdisheng/FIT3179/main/project2/data/line_chart.csv"},
    "transform": [{"filter": "datum.country == 'Tunisia' || datum.country == 'South Africa' || datum.country == 'Algeria' || datum.country == 'Mauritius' || datum.country == 'Botswana' || datum.country == 'North Macedonia' || datum.country == 'Denmark' || datum.country == 'Estonia' || datum.country == 'Iceland' || datum.country == 'Serbia'"},
                  {"calculate": "{'Tunisia': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/tunisia.png', 'South Africa': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/south-africa.png', 'Algeria': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/algeria.png', 'Mauritius': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/mauritius.png', 'Botswana': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/botswana.png', 'North Macedonia': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/north-macedonia.png', 'Denmark': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/denmark.png', 'Estonia': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/estonia.png', 'Iceland': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/iceland.png', 'Serbia': 'https://github.com/ongdisheng/FIT3179/blob/main/project2/resource/serbia.png'}",
                   "as": "img"}],
    "encoding": {
      "x": {"field": "year", "type": "temporal", "title": "Year"},
      "y": {"field": "mortality_rate", "type": "quantitative", "title": "Child Mortality Rate", "axis": {"tickCount": 2}, "scale": {"type": "log", "domain": [0.1, 10]}},
      "color": {
        "condition": {
          "param": "hover",
          "field": "country",
          "type": "nominal",
          "legend": null
        },
        "value": "grey"
      },
      "opacity": {
        "condition": {
          "param": "hover",
          "value": 1
        },
        "value": 0.2
      }
    },
    "layer": [{
      "description": "transparent layer to make it easier to trigger selection",
      "params": [{
        "name": "hover",
        "value": [{"country": "Denmark"}],
        "select": {
          "type": "point",
          "fields": ["country"],
          "on": "mouseover"
        }
      }],
      "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
    }, {
      "mark": "line"
    }, {
      "encoding": {
        "x": {"aggregate": "max", "field": "year"},
        "y": {"aggregate": {"argmax": "year"}, "field": "mortality_rate"}
      },
      "layer": [{
        "mark": {"type": "circle"}
      }, {
        "mark": {"type": "image", "align": "left", "dx": 4},
        "encoding": {"url": {"field": "img", "type": "nominal"}}
      }]
    }],
    "config": {"view": {"stroke": null}}
  }