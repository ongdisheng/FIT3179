{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Child mortality rate vs GDP per capita (2016)",
    "data": {
      "url": "https://raw.githubusercontent.com/ongdisheng/FIT3179/main/week10/data/bubble_plot.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.gdp_per_capita > 0"},
      {"filter": "datum.child_mortality_rate > 0"},
      {"filter": "datum.population > Population_Above"}
    ],
    "encoding": {
      "x": {
        "field": "gdp_per_capita",
        "type": "quantitative",
        "title": "GDP per capita ($)",
        "axis": {"tickCount": 3},
        "scale": {"type": "log", "domain": [200, 200000]}
      },
      "y": {
        "field": "child_mortality_rate",
        "type": "quantitative",
        "title": "Child mortality rate",
        "axis": {"tickCount": 2},
        "scale": {"type": "log", "domain": [0.15, 15]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "params": [
          {
            "name": "continent_highlight",
            "select": {"type": "point", "fields": ["continent"]},
            "bind": "legend"
          }
        ],
        "encoding": {
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {
                "format": ".1s",
                "title": "Population"
            }
          },
          "color": {
            "field": "continent",
            "type": "nominal",
            "legend": {
                "title": "Continent"
            },
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"param": "continent_highlight", "value": 0.6},
            "value": 0
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "gdp_per_capita", "type": "quantitative", "format": "$,", "title": "GDP Per Capita"},
            {"field": "child_mortality", "type": "quantitative", "format": ",", "title": "Number Of Child Deaths"},
            {"field": "child_mortality_rate", "type": "quantitative", "format": ".2f", "title": "Child Mortality Rate"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['country'] == 'China' || datum['country'] == 'Singapore' || datum['country'] == 'Australia' || datum['country'] == 'New Zealand' || datum['country'] == 'Italy' || datum['country'] == 'Yemen' ||  datum['country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "gdp_per_capita", "type": "quantitative", "format": "$,", "title": "GDP Per Capita"},
            {"field": "child_mortality", "type": "quantitative", "format": ",", "title": "Number Of Child Deaths"},
            {"field": "child_mortality_rate", "type": "quantitative", "format": ".2f", "title": "Child Mortality Rate"}
          ]
        }
      }
    ]
  }