{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/ongdisheng/FIT3179/main/project2/data/area_chart.csv"
    },
    "mark": {
      "type": "area",
      "line": {
        "color": "darkblue"
      },
      "color": {
        "x1": 1,
        "y1": 1,
        "x2": 1,
        "y2": 0,
        "gradient": "linear",
        "stops": [
          {
            "offset": 0,
            "color": "white"
          },
          {
            "offset": 1,
            "color": "darkblue"
          }
        ]
      }
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "temporal",
        "title": "Year"
      },
      "y": {
        "field": "deaths",
        "type": "quantitative",
        "title": "Child deaths"
      }
    }
  }