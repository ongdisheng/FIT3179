{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/ongdisheng/FIT3179/main/project2/data/butterfly_chart.csv"},
    "spacing": 0,
    "hconcat": [{
      "transform": [{
        "filter": {"field": "gender", "equal": "girl"}
      }],
      "title": "Girl",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "cause", "axis": null, "sort": "descending"
        },
        "x": {
          "aggregate": "sum", "field": "deaths",
          "title": "Mortality rate",
          "axis": {"format": "s"},
          "sort": "descending"
        },
        "color": {
          "field": "gender",
          "scale": {"range": ["#675193", "#ca8861"]},
          "legend": null
        }
      }
    }, {
      "width": 20,
      "view": {"stroke": null},
      "mark": {
        "type": "text",
        "align": "center"
      },
      "encoding": {
        "y": {"field": "cause", "type": "nominal", "axis": null, "sort": "descending"},
        "text": {"field": "cause", "type": "nominal"}
      }
    }, {
      "transform": [{
        "filter": {"field": "gender", "equal": "boy"}
      }],
      "title": "Boy",
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "cause", "title": null,
          "axis": null, "sort": "descending"
        },
        "x": {
          "aggregate": "sum", "field": "deaths",
          "title": "Mortality rate",
          "axis": {"format": "s"}
        },
        "color": {
          "field": "gender",
          "legend": null
        }
      }
    }],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false}
    }
  }