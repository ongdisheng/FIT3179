{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Child mortality rate vs GDP per capita",
  "data": {
    "url": "https://raw.githubusercontent.com/ongdisheng/FIT3179/main/project2/data/bubble_plot.csv"
  },
  "params": [
    {
      "name": "Year",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2016,
        "step": 1,
        "name": "Year: "
      } 
    },
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels":[
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.gdp_per_capita > 0"},
    {"filter": "datum.child_mortality_rate > 0"},
    {"filter": "datum.population > Population_Above"},
    {"filter": "Continent_selection == null || datum.continent == Continent_selection"},
    {"filter": "datum.year == Year"}
  ],
  "layer": [
    {
      "transform": [
        {"filter": {"param": "Year"}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 420,
        "y": 300,
        "opacity": 0.05,
        "color": "lightgray"
      },
      "encoding": {"text": {"field": "year"}}
    },
    {
      "encoding": {
        "x": {
          "field": "gdp_per_capita",
          "type": "quantitative",
          "title": "GDP per capita ($)",
          "axis": {"tickCount": 3},
          "scale": {"type": "log", "domain": [200, 200000]}
        },
        "y": {
          "field": "child_mortality_rate",
          "type": "quantitative",
          "title": "Child mortality rate",
          "axis": {"tickCount": 3},
          "scale": {"type": "log", "domain": [0.1, 100]}
        }
      },
      "layer": [
        {
          "selection": {
            "continent_highlight": {
              "type": "multi",
              "fields": ["continent"],
              "bind": "legend"
            }
          },
          "mark": "circle",
          "encoding": {
            "size": {
              "field": "population",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
                "range": [10, 50, 150, 200, 300, 400]
              },
              "legend": {
                  "format": ".1s",
                  "title": "Population"
              }
            },
            "color": {
              "field": "continent",
              "type": "nominal",
              "legend": {
                  "title": "Continent"
              },
              "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#a6cee3",
                  "#377eb8",
                  "#a65628"
                ]
              }
            },
            "opacity": {
              "condition": {"selection": "continent_highlight", "value": 0.6},
              "value": 0.2
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {"field": "population", "type": "quantitative", "title": "Population"},
              {"field": "gdp_per_capita", "type": "quantitative", "format": "$,", "title": "GDP Per Capita"},
              {"field": "child_mortality", "type": "quantitative", "format": ",", "title": "Number Of Child Deaths"},
              {"field": "child_mortality_rate", "type": "quantitative", "format": ".2f", "title": "Child Mortality Rate Per 1,000 Live Births"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "country", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['country'] == 'China' || datum['country'] == 'Singapore' || datum['country'] == 'Australia' || datum['country'] == 'New Zealand' || datum['country'] == 'Italy' || datum['country'] == 'Yemen' ||  datum['country'] == 'United States'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {"field": "country", "type": "nominal", "title": "Country"},
              {"field": "population", "type": "quantitative", "title": "Population"},
              {"field": "gdp_per_capita", "type": "quantitative", "format": "$,", "title": "GDP Per Capita"},
              {"field": "child_mortality", "type": "quantitative", "format": ",", "title": "Number Of Child Deaths"},
              {"field": "child_mortality_rate", "type": "quantitative", "format": ".2f", "title": "Child Mortality Rate"}
            ]
          }
        }
      ]
    }
  ]
}